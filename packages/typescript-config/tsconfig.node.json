{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "target": "ESNext",
    "types": ["node"],
    "moduleResolution": "bundler",

    "useDefineForClassFields": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "noEmit": true
  }
}
